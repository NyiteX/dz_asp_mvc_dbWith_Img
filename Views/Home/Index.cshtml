@{
    ViewData["Title"] = "Home Page";
}
@model List<ProductModel>

    <div class="users-container">
        <h1>Products</h1>
        @foreach (var product in Model)
        {
        <div class="user-card flex-column" style="background-image: url('@Url.Content($"data:image/png;base64, {Convert.ToBase64String(product.Pic)}")');">
            <label>Name: @product.Name</label><br />
            <label>Discription: @product.Discription</label><br />
            <label>Count: @product.Count</label><br />
            <label>Price: @product.Price</label><br />
            @*<img src="@Url.Content($"data:image/png;base64, {Convert.ToBase64String(product.Pic)}")" /><br />*@
            </div>
        }
    </div>

