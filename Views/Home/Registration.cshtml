@{
    ViewData["Title"] = "Registration Page";
}

<div class="text-center">
    <h1>Registration</h1>   


    <form method="post">
        <label>Name:</label><br />
        <input type="text" name="name" maxlength="15" required /><br />
        <label>Password:</label><br />
        <input type="password" name="password" maxlength="15" required /><br />
        <label>Email:</label><br />
        <input type="email" name="email" maxlength="30" required /><br />
        <input type="submit" value="Sign up"/>
    </form>

</div>