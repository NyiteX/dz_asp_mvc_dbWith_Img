@{
    ViewData["Title"] = "Registration Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h1>Registration</h1>

        <form method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" name="name" maxlength="15" required class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" maxlength="15" required class="form-control" />
            </div>
            <div class="form-group">
                <label for="email">Email:</label><br />
                <input type="email" name="email" maxlength="30" required class="form-control" /><br />
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</body>
</html>