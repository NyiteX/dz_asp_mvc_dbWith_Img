@{
    ViewData["Title"] = "Registration Page";
}

<div class="text-center">
    <h1>Registration</h1>   
</div>

<form method="post">
    <label>Name:</label>
    <input type="text" name="name" required /><br />
    <label>Password:</label>
    <input type="password" name="password" required /><br />
    <label>Email:</label>
    <input type="email" name="email" required /><br />
    <input type="submit" />
</form>