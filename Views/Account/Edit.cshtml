@{
    ViewData["Title"] = "Edit Page";
}
@model UserModel

    <div class="login-container">
        <h1>Edit</h1>

    <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">New Name:</label>
            <input type="text" name="name" maxlength="15" class="form-control" placeholder="@Model.Login" />
            </div>
            <div class="form-group">
                <label for="password">New Password:</label>
                <input type="password" name="password" maxlength="15" class="form-control" />
            </div>
            <div class="form-group">
                <label for="email">New Email:</label><br />
            <input type="email" name="email" maxlength="30" class="form-control" placeholder="@Model.Email" /><br />
            </div>
        <div class="form-group">
            <label for="image">New Image:</label>
            <input type="file" name="image" accept="image/*" required class="form-control" />
        </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
